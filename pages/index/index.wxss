.header {
  height: 300rpx;
  background: #fb4949;
  border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
  padding-top: 30rpx;
  padding-left: 30rpx;
}

.header text {
  font-size: 29rpx;
  color: #fff;
  font-family: PingFang-SC-Medium;
  letter-spacing: 2rpx;
  display: block;
}

.container {
  margin-top: 20rpx;
  padding: 0rpx 28rpx;
}

.item {
  border: 1rpx solid #f5f5f5;
  box-shadow: 0px 5rpx 20rpx 0px rgba(51, 51, 51, 0.5);
  width: 300rpx;
  height: 200rpx;
  border-radius: 20rpx;
  margin-bottom: 40rpx;
}

.item text {
  font-size: 29rpx;
  color: #fb4949;
}
